extends layout

block content
	h1 Diege — лучший в мире сервис блогов!
	section.features
		article.feat
			h3 Быстрота
			p Достаточно просто зарегистрироваться и блог уже в вашем распоряжении! 
		article.feat
			h3 Индивидуальность
			p Сделайте ваш блог таким, каким желаете его видеть! Нет никаких ограничений по внешнему виду и дизайну.
		article.feat
			h3 Простота
			p Вам не понадобится знание веб-дизайна или программирования. Управлять блогом просто и приятно!
		article.feat
			h3 Свобода
			p Пишите в своём блоге то, что пожелаете, и снабжайте посты изображениями! Рассказ о прошедшем отдыхе, мнение о политической ситуации - никаких ограничений!
		div.clearfix
	section.sign
		h2 Регистрация
		form(action="/sign" method="post")
			input(type="text" name="name" placeholder="Имя блога" required)
			br
			article.name_check Имя занято!
			input(type="text" name="mail" placeholder="Ваш e-mail" required)
			br
			article.mail_check Почта занята!
			input(type="text" name="pass" placeholder="Пароль" required)
			br
			input(type="submit" value="Создать" id="new_blog")
	section.login
		h2 Вход
		form(action="/login" method="post")
			input(type="text" name="login" placeholder="Ваш e-mail" required)
			br
			input(type="password" name="pass" placeholder="Пароль" required)
			br
			input(type="checkbox" value="remember" id="remember")
			label(for="remember") Запомнить меня
			br
			br
			input(type="submit" value="Войти")